<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
    
                <%= gravatar_for @user %>
    
                <%= @user.name %>
            </h1>
        </section>
        <section>
            <div id="following_btn">
            <span><%= current_user.following_users.count %>
            <%= link_to "フォロー", followings_user_url %></span>
            </div>
            <div id="folloer_btn">
                <span><%= current_user.follower_users.count %>
                <%= link_to "フォロワー", followers_user_url %></span>
            </div>
        </section>
        <section>
            <div id="favorite_btn">
                <%= link_to "お気に入り一覧", favorites_user_url  %>
            </div>
        </section>
        <section class="user_profile">
            地域:
            <%= @user.location %>
            <br>
            プロフィール:
            <%= @user.profile %>
        </section>
    </aside>

    <div class="col-md-8">
        
        <%= render 'follow_form' if logged_in? %>

        <% if @user.microposts.any? %>
            <h3>Microposts (
            <%= @user.microposts.count %>
            )</h3>
            
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>
            
            

